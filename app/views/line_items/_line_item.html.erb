<% if line_item == @current_item %>
  <tr class="line-item-highlight">
<% else %>
  <tr>
<% end %>
  <td class="quantity">
    <%= line_item.quantity %>
  </td>
  <td>
    <%= truncate(sanitize line_item.product.title, length: 30) %>
  </td>
  <td class="price">
    <%= number_to_currency(line_item.total_price) %>
  </td>
</tr>
